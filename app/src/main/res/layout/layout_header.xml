<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:src="@drawable/simplepos"
    android:layout_alignParentTop="true"
    android:id="@+id/logotoko"
    android:contextClickable="true"
    android:layout_alignParentRight="false"
    android:layout_centerHorizontal="true"
    android:layout_alignParentEnd="false"
    android:paddingBottom="10dp"
    android:paddingTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Farid Syafaat"
        android:id="@+id/idtxtnama"
        android:layout_below="@+id/logotoko"
        android:layout_centerHorizontal="true"
        android:textColor="#0d0d0c"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="farid0910@gmail.com"
        android:id="@+id/idtxtnis"
        android:layout_below="@+id/idtxtnama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#6b7d04"
        android:layout_centerInParent="true"
        android:gravity="center" />

</RelativeLayout>